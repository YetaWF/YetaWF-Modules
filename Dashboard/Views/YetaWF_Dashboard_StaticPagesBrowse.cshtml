@inherits YetaWF.Core.Views.RazorView<YetaWF.Modules.Dashboard.Modules.StaticPagesBrowseModule, YetaWF.Modules.Dashboard.Controllers.StaticPagesBrowseModuleController.BrowseModel>
@__ResStrHtml("explain", "<p>Static pages are fast loading pages whose content typically doesn't change. The list below shows all currently loaded static pages. There may be additional pages which were defined as static pages (in their Page Settings) which haven't been loaded yet.</p><p>Static pages are enabled per page (Page Settings) and site wide using Site Settings.</p>")
@if (!Manager.CurrentSite.StaticPages) {
    <div class="@YetaWF.Core.Globals.CssDivWarning">
        @__ResStr("disabled", "Static pages are disabled for this site.")
    </div>
}
@using (Form("StaticPagesBrowse_Partial")) {
    @PartialForm()
    @Html.DisplayFor(m => Model.GridDef)
}
