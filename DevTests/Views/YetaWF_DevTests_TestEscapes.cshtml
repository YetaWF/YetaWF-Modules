@inherits YetaWF.Core.Views.RazorView<YetaWF.Modules.DevTests.Modules.TestEscapesModule, YetaWF.Modules.DevTests.Controllers.TestEscapesModuleController.EditModel>
@using (Form("TestEscapes_Partial")) {
    @PartialForm()

    <input type="button" value="Y_Message()" name="Y_Message" />
    <input type="button" value="Y_Error()" name="Y_Error" />
    <input type="button" value="Y_Alert()" name="Y_Alert" />
    <input type="button" value="Y_AlertYesNo()" name="Y_AlertYesNo" />
    <input type="button" value="Y_Confirm()" name="Y_Confirm" />
    <input type="button" value="Y_PleaseWait()" name="Y_PleaseWait" />

    @FormButtons(new FormButton[] {
        new FormButton() { ButtonType= ButtonTypeEnum.Apply, },
        new FormButton() { ButtonType= ButtonTypeEnum.Submit, },
        new FormButton() { ButtonType= ButtonTypeEnum.Cancel, },
    });
}
<script>
    $(document).on('click', 'input[name="Y_Message"]', function () {
        Y_Message("TEST < > & @@ {0} TEST");
    });
    $(document).on('click', 'input[name="Y_Error"]', function () {
        Y_Error("TEST < > & @@ {0} TEST");
    });
    $(document).on('click', 'input[name="Y_Alert"]', function () {
        Y_Alert("TEST < > & @@ {0} TEST", "TITLE < > & @@ {0} TEST");
    });
    $(document).on('click', 'input[name="Y_Confirm"]', function () {
        Y_Confirm("TEST < > & @@ {0} TEST");
    });
    $(document).on('click', 'input[name="Y_AlertYesNo"]', function () {
        Y_AlertYesNo("TEST < > & @@ {0} TEST", "TITLE < > & @@ {0} TEST");
    });
    $(document).on('click', 'input[name="Y_PleaseWait"]', function () {
        Y_PleaseWait("Reload page to continue\n\nTEST < > & @@ {0} TEST", "TITLE < > & @@ {0} TEST");
    });

</script>