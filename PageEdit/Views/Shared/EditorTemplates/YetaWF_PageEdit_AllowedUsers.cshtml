@inherits YetaWF.Modules.PageEdit.Views.Shared.Users<YetaWF.Core.Serializers.SerializableList<YetaWF.Core.Pages.PageDefinition.AllowedUser>>
@using YetaWF.Modules.PageEdit.Views.Shared
@using YetaWF.Core.Support
<div class='yt_yetawf_pageedit_allowedusers yt_grid_addordelete t_edit'
        data-dupmsg="@__ResStr("dupmsg", "User {0} has already been added")"
        data-addedmsg="@__ResStr("addedmsg", "User {0} has been added")"
        data-remmsg="@__ResStr("remmsg", "{0} has been removed")">
    @Html.RenderAllowedUsersAsync("", Model).Result
    <div class="t_newvalue">
        @Html.RenderExtLabel(__ResStr("newUser", "New User"), ToolTip: __ResStr("newUserTT", "Enter a new user name and click Add."))
        @Html.RenderTextBoxAsync("NewValue", null, HtmlAttributes: new { @class = "yt_text40 yt_text_base t_edit", maxlength = YetaWF.Core.Globals.MaxUser }).Result
        <input name="btnAdd" type="button" value="Add" data-ajaxurl="@YetaWFManager.UrlFor(typeof(YetaWF.Modules.PageEdit.Controllers.SharedSupportController), "AddUserToPage")" />
    </div>
</div>